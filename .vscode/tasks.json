{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Redis Server",
            "type": "shell",
            "command": "redis-server",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "yarn run dev",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "python app.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run All",
            "dependsOn": ["Run Redis Server", "Run Frontend", "Run Backend"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
